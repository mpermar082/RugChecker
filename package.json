{
    // Package metadata
    "name": "rugchecker",
    "version": "1.0.0",
    "description": "RugChecker - A TypeScript implementation",
    "main": "dist/index.js",
    "scripts": {
        // Build and compile TypeScript code
        "build": "tsc",
        
        // Start the application
        "start": "node dist/index.js",
        
        // Run the application in development mode
        "dev": "ts-node src/index.ts",
        
        // Run unit tests
        "test": "jest",
        
        // Clean the compiled output
        "clean": "rm -rf dist"
    },
    "author": "mpermar082",
    "license": "MIT",
    "dependencies": {
        "minimist": "^1.2.0"
    },
    "devDependencies": {
        "typescript": "^5.0.0", // TypeScript compiler
        "@types/node": "^18.0.0", // TypeScript definitions for Node.js
        "@types/minimist": "^1.2.0", // TypeScript definitions for minimist
        "ts-node": "^10.0.0", // TypeScript execution environment
        "jest": "^29.0.0", // Unit testing framework
        "@types/jest": "^29.0.0" // TypeScript definitions for Jest
    }
}